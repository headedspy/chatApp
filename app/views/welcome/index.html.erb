
<body style="background-image: linear-gradient(91deg, #0fb8ad 0%, #1fc8db 51%, #2cb5e8 75%); overflow:hidden;">
<div style="background-color: rgba(15,15,143,.25); text-align:center; color:White; font-family:Courier New; border-radius: 20px/60px"><h1>PrivNote Mock</h1></div>

<div style="backface-visibility:hidden">

<%= form_tag({}, multipart: true) do %>
	<div class="depth"><%= text_area_tag 'text', nil, rows:6, cols: 100, class:"depth" %><div>
	<div style="position:relative; top:-80px; left:82%" class="metro"><%= submit_tag 'Get Link', class:"metro-over"%></div>
<% end %>
<pre>
	<h4 style="text-align:center"><a href="<%= $link.inspect[1..-2] %>", class="inline-link"><%= $link.inspect[1..-2] %></a><h4>
</pre>

</div>
